@using Newtonsoft.Json

<pre>
    @convertedString   
</pre>

@code {
    [Parameter]
    public object Obj { get; set; } = new { };

    private MarkupString convertedString { get; set; }

    protected override void OnParametersSet()
    {
        var json = new MarkupString(Obj as string ?? JsonConvert.SerializeObject(Obj, Formatting.Indented));

        convertedString = json;
    }
}

